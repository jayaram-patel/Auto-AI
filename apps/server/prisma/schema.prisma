generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ModelState {
  TRAINING
  READY
  ERROR
}

model Models {
  id    String     @id @default(auto()) @map("_id") @db.ObjectId
  state ModelState @default(TRAINING)

  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Model settings
  name        String?
  description String?
  accuracy    Float?
  inputs      Json[]

  modelType String?
  thoughts String?

  @@index([userId])
}

model Inferences {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  modelId   String   @map("model_id")
  input     Json
  output    Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId String @map("user_id")

  @@index([modelId, userId])
}

model Datasets {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  path      String

  userId String @map("user_id")

  @@index([userId, createdAt])
}
